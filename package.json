{
  "name": "drone-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "restart": "bun run build && bun run drone hub stop && bun run drone hub start",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "smoke": "node scripts/smoke/smoke-all.cjs && node scripts/smoke/smoke-docker-all.cjs",
    "smoke:docker": "node scripts/smoke/smoke-docker-all.cjs",
    "dvm": "bun run --filter dvm dev --",
    "drone": "bun run --filter drone dev --",
    "drone-hub": "bun run --filter drone-hub dev",
    "looped": "bun run --cwd apps/looped dev --",
    "regression": "bun run build && bun run smoke && bun run test"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "bun@1.2.23"
}
