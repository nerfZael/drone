{
  "name": "drone",
  "version": "0.1.0",
  "description": "Drone: per-container agent wrapper daemon + host CLI (via dvm)",
  "bin": "dist/cli.js",
  "main": "dist/cli.js",
  "type": "commonjs",
  "files": [
    "dist/**",
    "README.md"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node scripts/postbuild.cjs",
    "clean": "rimraf dist",
    "dev": "ts-node src/cli.ts",
    "test": "bun test tests",
    "test:coverage": "bun test --coverage tests",
    "smoke": "node scripts/smoke-cli.cjs",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.29",
    "@ai-sdk/openai": "^3.0.26",
    "ai": "^6.0.77",
    "commander": "^12.1.0",
    "dotenv": "^17.2.4",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
