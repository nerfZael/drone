{
  "name": "dvm",
  "version": "0.1.0",
  "description": "CLI tool for managing Docker containers as isolated VMs",
  "bin": "dist/cli.js",
  "main": "dist/cli.js",
  "type": "commonjs",
  "files": [
    "dist/**",
    "README.md"
  ],
  "keywords": [
    "cli",
    "docker",
    "vm",
    "container",
    "devtools"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/copy-gui-scripts.cjs",
    "copy-scripts": "node scripts/copy-gui-scripts.cjs",
    "postbuild": "node scripts/postbuild.cjs",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "dev": "ts-node src/cli.ts",
    "smoke": "node scripts/smoke-cli.cjs",
    "smoke:docker": "node scripts/smoke-docker.cjs",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write .",
    "prepack": "npm run build",
    "pretest": "npm run build",
    "test": "jest -c jest.config.js",
    "test:coverage": "jest -c jest.config.js --coverage"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "dockerode": "^4.0.2",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "tar": "^7.5.7"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.25",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
